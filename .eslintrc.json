{
	"env": {
		"commonjs": true,
		"browser": true,
		"es2021": true,
		"node": true,
		"es6": true
	},
	"plugins": [
		"react"
	],
	"extends": [
		"plugin:react/recommended",
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			2,
			{
				"SwitchCase": 1,
				"ignoredNodes": [
					"ConditionalExpression"
				]
			}
		]
	}
}